<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeveloperActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center"
            android:text="Preposition App"
            android:textAlignment="center"
            android:textColor="#27916a"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Developer Name: Munna"
            android:background="#cfd8dc"
            android:textAlignment="center"
            android:textColor="#27916a"
            android:textSize="30sp"
            tools:fontFamily="@font/aclonica" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Contact: mmunna864@gmail.com"
            android:textAlignment="center"
            android:textColor="#e5323635"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Specially Thanks"
            android:textAlignment="center"
            android:textColor="#27916a"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Asif"
                android:background="#cfd8dc"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textColor="#383131"
                android:textSize="25sp"
                tools:fontFamily="@font/aclonica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#cfd8dc"
                android:layout_margin="5dp"
                android:text="Nazmul"
                android:textAlignment="center"
                android:textColor="#383131"
                android:textSize="25sp"
                tools:fontFamily="@font/aclonica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#cfd8dc"
                android:layout_margin="5dp"
                android:text="Rahul"
                android:textAlignment="center"
                android:textColor="#383131"
                android:textSize="25sp"
                tools:fontFamily="@font/aclonica" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Shahas"
                android:background="#cfd8dc"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textColor="#383131"
                android:textSize="25sp"
                tools:fontFamily="@font/aclonica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="Somudro"
                android:background="#cfd8dc"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textColor="#383131"
                android:textSize="25sp"
                tools:fontFamily="@font/aclonica" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>